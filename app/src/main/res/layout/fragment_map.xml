<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:id="@+id/container_map"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:animateLayoutChanges="true"
                                             android:focusable="true"
                                             android:focusableInTouchMode="true">

    <EditText
        android:id="@+id/map_search"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/edge_margin"
        android:layout_marginStart="@dimen/edge_margin"
        android:layout_marginTop="@dimen/status_bar_height_and_padding"
        android:background="@drawable/search_background"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:hint="@string/map_search"
        android:imeOptions="actionSearch"
        android:inputType="text|textNoSuggestions"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/edge_margin"
        android:paddingStart="@dimen/edge_margin"
        android:paddingTop="8dp"
        android:textColor="@color/textPrimaryDark"
        android:textColorHint="@color/textSecondaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>